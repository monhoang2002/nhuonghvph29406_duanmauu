<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="9">
            <TextView
                android:id="@+id/custom_item_phieuMuon_maPhieu"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ma phieu"/>
            <TextView
                android:id="@+id/custom_item_phieuMuon_thanhVien"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh vien"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/custom_item_phieuMuon_tenSach"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ten Sach"/>
                <TextView
                    android:id="@+id/custom_item_phieuMuon_trangThai"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="da tra"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/custom_item_phieuMuon_tienThue"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tien thue"/>
                <TextView
                    android:id="@+id/custom_item_phieuMuon_ngayThue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ngay thue"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/custom_item_phieuMuon_delete"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_delete_forever_24"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>